<?xml version="1.0" encoding="utf-8"?>
<!--this file is for the header in the hamburger menu adds a little flare-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/light_blue"

    >
    <!--this is the image for the person or whatever we can do-->
    <ImageView
        android:layout_height="100dp"
        android:layout_width ="100dp"
        android:id="@+id/img"
        android:src="@drawable/person_image_file"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        />
    <!--for the welcome text-->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Welcomes"
        android:layout_toRightOf="@+id/img"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/name"
        />
    <!--this is for the hiya text and we can virtually say anything doesnt have to be hiya-->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="hiya"
        android:layout_toRightOf="@+id/img"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/email"
        android:layout_below="@id/name"
          />

</RelativeLayout>